<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/root_background"
    android:paddingStart="19dp"
    android:paddingEnd="19dp"
    tools:context=".ui.login.LoginFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <include
        layout="@layout/logo_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.45" />

    <EditText
        android:id="@+id/et_telephone"
        style="@style/Login_Regis_EditText_Style"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:autofillHints="phone"
        android:maxLength="11"
        android:hint="@string/input_telephone"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_2" />

    <EditText
        android:id="@+id/et_verify_code"
        style="@style/Login_Regis_EditText_Style"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="28dp"
        android:autofillHints="creditCardNumber"
        android:hint="@string/obtain_verify_code"
        android:maxLength="6"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_telephone"
        app:layout_goneMarginTop="28dp" />

    <com.hhsj.ilive.widget.CustomCountDownView
        android:id="@+id/count_down_input_verify_code"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginEnd="19dp"
        app:layout_constraintBottom_toBottomOf="@id/et_verify_code"
        app:layout_constraintEnd_toEndOf="@id/et_verify_code"
        app:layout_constraintTop_toTopOf="@id/et_verify_code" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69" />

    <LinearLayout
        android:id="@+id/ll_check_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/et_verify_code"
        app:layout_constraintEnd_toEndOf="@id/et_verify_code"
        app:layout_constraintTop_toTopOf="@id/guideline_3" >

        <com.hhsj.ilive.widget.CustomCheckBox
            android:id="@+id/checkbox_read"
            android:layout_width="23dp"
            android:layout_height="18dp"
            android:button="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline_3" />

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_protocol_tips"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/checkbox_read"
            app:layout_constraintStart_toEndOf="@id/checkbox_read"
            app:layout_constraintTop_toTopOf="@id/checkbox_read" />

        <TextView
            android:id="@+id/tv_protocol_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/login_register_text_color"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/checkbox_read"
            app:layout_constraintStart_toEndOf="@id/textview1"
            app:layout_constraintTop_toTopOf="@id/checkbox_read" />

    </LinearLayout>

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_read_text_2"
        android:textColor="@color/text_protocol_tips"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/ll_check_read"
        app:layout_constraintEnd_toEndOf="@id/ll_check_read"
        app:layout_constraintTop_toBottomOf="@id/ll_check_read" />

    <Button
        android:id="@+id/btn_register"
        style="@style/Login_Regis_Button_Style"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="27dp"
        android:enabled="false"
        android:text="@string/agree_register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.93" />

    <com.hhsj.ilive.widget.LoginRegisterBottomView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guideline_4" />

</androidx.constraintlayout.widget.ConstraintLayout>